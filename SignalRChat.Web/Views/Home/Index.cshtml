@{
    ViewBag.Title = "Chat";
}

<input type="hidden" id="chatUser" />
<input type="hidden" id="colorUserChat" />

<div class="row " style="padding-top:40px;">
    <div class="col-md-9 col-lg-offset-1">
        <h3 class="text-center">Chat SignalR With Speech Cognitive Service</h3>
    </div>
    <div class="col-md-2">
        <img class="img-responsive" src="~/Content/images/LogoBanner01.png" />
    </div>

    <br /><br />
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                SALA
            </div>
            <div class="panel-body">
                <ul id="chatRoom" class="media-list"></ul>
            </div>
            <div class="panel-footer">
                <div class="input-group">
                    <input id="message" type="text" class="form-control" placeholder="Ingrese su mensaje" />
                    <span class="input-group-btn">
                        <button id="micro" class="btn btn-info" type="button">
                            <i class="fa fa-microphone fa-1x" aria-hidden="true"></i> Grabar
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="@Url.Content("~/signalr/hubs")"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        var urls = {
            speech: '@Url.Action("POST", "SpeechRecognition", new { httproute = "DefaultApi" })'
        };
    </script>

    <script src="~/Scripts/Index.js"></script>
}